build ./objects/posix-release/so/sound/format-wav.o: compile_so ./source/sound/format-wav.c
build ./objects/posix-release/so/sound/laws.o:       compile_so ./source/sound/laws.c
build ./objects/posix-release/so/sound/sound.o:      compile_so ./source/sound/sound.c
build ./objects/posix-release/so/status.o:           compile_so ./source/status.c
build ./objects/posix-release/so/tree.o:             compile_so ./source/tree.c
